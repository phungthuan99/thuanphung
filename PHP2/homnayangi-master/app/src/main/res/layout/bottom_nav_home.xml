<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#00000000"
    android:orientation="horizontal"
    android:padding="8dp"
    android:weightSum="5">

    <LinearLayout
        android:id="@+id/linear_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:targetApi="lollipop">

        <ImageView
            android:id="@+id/img_home_nav"
            android:layout_width="@dimen/icon_bottom_nav"
            android:layout_height="@dimen/icon_bottom_nav"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/icon_home_unactive" />

        <TextView
            android:id="@+id/txt_home_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Trang chủ" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:targetApi="lollipop">

        <ImageView
            android:id="@+id/img_article_nav"
            android:layout_width="@dimen/icon_bottom_nav"
            android:layout_height="@dimen/icon_bottom_nav"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/icon_article_unactive" />

        <TextView
            android:id="@+id/txt_article_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bài viết" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:targetApi="lollipop">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/button_add_big" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:targetApi="lollipop">

        <ImageView
            android:id="@+id/img_search_nav"
            android:layout_width="@dimen/icon_bottom_nav"
            android:layout_height="@dimen/icon_bottom_nav"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/icon_search_unactive" />

        <TextView
            android:id="@+id/txt_search_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tìm kiếm" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_videos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:targetApi="lollipop">

        <ImageView
            android:id="@+id/img_video_nav"
            android:layout_width="@dimen/icon_bottom_nav"
            android:layout_height="@dimen/icon_bottom_nav"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/icon_video_unactive" />

        <TextView
            android:id="@+id/txt_video_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Videos" />
    </LinearLayout>
</LinearLayout>